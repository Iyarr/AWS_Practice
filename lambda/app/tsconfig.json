{
  "compilerOptions": {
    // these options are not read by esbuild
    "moduleResolution": "nodenext",
    "noImplicitAny": false,
    "noEmitOnError": true,
    "removeComments": false,
    "sourceMap": false,
    "target": "es2020",
    "module": "NodeNext",
    "outDir": "dist"
  },
  "include": ["src/**/*.ts", "src/build.js"],
  "exclude": ["node_modules"]
}
